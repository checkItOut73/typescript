{
  "name": "typescript-skeleton",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build:browser": "webpack --config build/configs/webpack.config.js",
    "build:server": "tsc",
    "watch:server": "npm run build:server -- --watch",
    "format": "prettier --write \"{./**/*.{json,js,jsx,ts,tsx},.prettierrc}\"",
    "start": "node ./dist/server/index.js",
    "start:dev": "nodemon ./dist/server/index.js",
    "fix:webpack-hot-middleware:2.25.1": "replace \"module.id\" \"module.name\" ./node_modules/webpack-hot-middleware/middleware.js",
    "postinstall": "npm run fix:webpack-hot-middleware:2.25.1"
  },
  "_moduleAliases": {
    "@src": "dist",
    "@tests": "tests",
    "@browser": "dist/browser",
    "@server": "dist/server",
    "@components": "dist/browser/components",
    "@configs": "build/configs"
  },
  "dependencies": {
    "@types/webpack": "^5.28.0",
    "fastify": "^3.24.0",
    "fastify-static": "^4.5.0",
    "middie": "^5.3.0",
    "module-alias": "^2.2.2",
    "react": "^17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-decorators": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@hot-loader/react-dom": "^17.0.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "@types/react": "^17.0.36",
    "@types/react-dom": "^17.0.11",
    "@types/webpack-dev-middleware": "^5.0.2",
    "@types/webpack-hot-middleware": "^2.25.5",
    "babel-loader": "^8.2.3",
    "fork-ts-checker-webpack-plugin": "^6.4.2",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.3.1",
    "merge-options": "^3.0.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "react-hot-loader": "^4.13.0",
    "react-test-renderer": "^17.0.2",
    "replace": "^1.2.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-middleware": "^5.2.2",
    "webpack-hot-middleware": "2.25.1"
  }
}
